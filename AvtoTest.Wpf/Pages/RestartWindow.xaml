<Window x:Class="AvtoTest.Wpf.Pages.RestartWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:AvtoTest.Wpf.Pages"
        mc:Ignorable="d"
        Title="RestartWindow" Height="200" Width="300">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"></RowDefinition>
            <RowDefinition Height="*"></RowDefinition>
        </Grid.RowDefinitions>
        <Label x:Name="RestartLabel" Content="Are you sure to restart ?" FontSize="20" VerticalAlignment="Center" HorizontalAlignment="Center"></Label>
        <Grid Grid.Row="1">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"></ColumnDefinition>
                <ColumnDefinition Width="*"></ColumnDefinition>
            </Grid.ColumnDefinitions>
            <Button Click="OkButton_Click" Content="Ok" FontSize="22" FontWeight="DemiBold"></Button>
            <Button Grid.Column="1" Click="CancelButton_Click" Content="Cancel" FontSize="22" FontWeight="DemiBold"></Button>
        </Grid>    
    </Grid>
</Window>
