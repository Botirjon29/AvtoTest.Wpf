<Page x:Class="AvtoTest.Wpf.Pages.TicketsPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AvtoTest.Wpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="400"
      Title="TicketsPage">
    <Page.Resources>
        <Style x:Key="TicketButtonsStyle" TargetType="Button">
            <Setter Property="Content" Value="{Binding Text}"/>
        </Style>
    </Page.Resources>
    <Grid>
        
        <Label VerticalAlignment="Top" HorizontalAlignment="Center" Height="60" FontSize="30" Content="Tickets"></Label>
        
        <ScrollViewer Margin="0,60,0,60">
            <StackPanel Name="TicketButtonsPanel">
            </StackPanel>
        </ScrollViewer>
        
        <Button Click="MenuButtonClick" HorizontalAlignment="Center" VerticalAlignment="Bottom"  Width="100" Height="50" Content="Menu" Margin="5"></Button>
        
    </Grid>
</Page>

 
