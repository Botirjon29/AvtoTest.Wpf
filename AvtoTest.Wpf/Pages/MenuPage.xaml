<Page x:Class="AvtoTest.Wpf.Pages.MenuPage"
      xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
      xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
      xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
      xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
      xmlns:local="clr-namespace:AvtoTest.Wpf.Pages"
      mc:Ignorable="d" 
      d:DesignHeight="600" d:DesignWidth="400"
      Title="MenuPage">

    <Grid Background="White">
        <StackPanel x:Name="MenuPanel" VerticalAlignment="Bottom" Margin="10">
            
            <Image Height="300" x:Name="MenuImage"></Image>
            
            <StackPanel Orientation="Horizontal" Margin="0,0,0,30">
            <TextBlock Name="QuestionStatus" Width="150" FontSize="18" FontWeight="Bold">0/700</TextBlock>
            <TextBlock Name="TicketStatus" Width="150" FontSize="18" FontWeight="Bold" TextAlignment="Right">0/35</TextBlock>
            </StackPanel>

            <Button Content="Tickets" Click="TicketsButton_Click" ></Button>
            <Button Content="Examination" Margin="0,10,0,15" Click="ExaminationButton_Click"></Button>
            
        </StackPanel>
    </Grid>
</Page>
